extends ../layout

block append stylesheet
  link(rel='stylesheet', href='/stylesheets/transactions.css')

block content
  .row
    .col-xs-12
      h1.page-header #{title}
    if(success_messages != null)
      .col-md-10.col-md-offset-1.col-xs-12
        div#successMessage.alert.success.alert-success(role='success')
          .alert-title
            i.fa.fa-check.fa-2x
            strong Great!
          p !{success_messages}
  .row
    .col-xs-12.col-lg-10.col-lg-offset-1(style='margin-bottom:25px;')
      label(for='dateRange') Date Range:
      input(type='text', id='dateRange', name='dateRange', placeholder='06/26/2016 - 06/27/2016' style='margin-left: 10px;')
    .col-xs-6.col-lg-5.col-lg-offset-1
      .pull-left
        label(for='store') Store:
        select(id='store', name='store', style='margin-left:10px;')
          option(value='0') Barrie
          option(value='1') Toronto
          option(value='2') Guelph
    .col-xs-6.col-lg-5
      .pull-right
        label(for='teamMember') Team Member:
        select(id='teamMember', name='teamMember', style='margin-left:10px;')
          option(value='0') Michael
          option(value='1') Patrick
          option(value='2') Bradley
    .col-xs-12.col-lg-10.col-lg-offset-1
      hr
  .row
    .panel-group(role='tablist', aria-multiselectable='true')
      .col-xs-12.col-lg-10.col-lg-offset-1
        .panel.panel-default
          .panel-heading.purpleHead(role='tab', id='transactionHeading', data-toggle='collapse', data-target='#transactionCollapse')
            .row
              .col-xs-4.text-center
                h4.panel-title
                  | Acc. Units per Transaction:
                  strong(style='margin-left: 5px;') 1.33
              .col-xs-4.text-center
                h4.panel-title
                  | Basket Size:
                  strong(style='margin-left: 5px;') $38.33
              .col-xs-4.text-center
                h4.panel-title
                  | Average $ per HS:
                  strong(style='margin-left: 5px;') $147.50
          .panel-collapse.collapse(role='tabpanel', aria-labelledby='transactionHeading', id='transactionCollapse')
            .panel-body
              .panel.panel-default
                .panel-body
                  .col-xs-12.col-sm-6.col-md-4
                    strong Number of Transactions:
                    span(style='margin-left: 5px;') 4
                  .col-xs-12.col-sm-6.col-md-4
                    strong Device Care:
                    span(style='margin-left: 5px;') 66.7%
                  .col-xs-12.col-sm-6.col-md-4
                    strong iPhone:
                    span(style='margin-left: 5px;') 1
                  .col-xs-12.col-sm-6.col-md-4
                    strong Controllable Transactions:
                    span(style='margin-left: 5px;') 3
                  .col-xs-12.col-sm-6.col-md-4
                    strong AppleCare:
                    span(style='margin-left: 5px;') 100%
                  .col-xs-12.col-sm-6.col-md-4
                    strong Android:
                    span(style='margin-left: 5px;') 3
                  .col-xs-12.col-sm-6.col-md-4
                    strong Controllable Revenue:
                    span(style='margin-left: 5px;') $287.36
                  .col-xs-12.col-sm-6.col-md-4
                    strong Warranty:
                    span(style='margin-left: 5px;') 75%
                  .col-xs-12.col-sm-6.col-md-4
                    strong Other Devices:
                    span(style='margin-left: 5px;') 0
                  .col-xs-12
                    hr
                  .col-xs-12.col-sm-6.col-md-4
                    strong SBS Activations:
                    span(style='margin-left: 5px;') 0
                  .col-xs-12.col-sm-6.col-md-4
                    strong Learning Sessions:
                    span(style='margin-left: 5px;') 6
                  .col-xs-12.col-sm-6.col-md-4
                    strong Critters:
                    span(style='margin-left: 5px;') 0
                  .col-xs-12.col-sm-6.col-md-4
                    strong Appointments:
                    span(style='margin-left: 5px;') 1
                  .col-xs-12.col-sm-6.col-md-4
                    strong AOTM:
                    span(style='margin-left: 5px;') 2
                  .col-xs-12.col-sm-6.col-md-4
                    strong Donations:
                    span(style='margin-left: 5px;') 0
                  .col-xs-12.col-sm-6.col-md-4
                    strong Credit Cards:
                    span(style='margin-left: 5px;') 2
                  .col-xs-12.col-sm-6.col-md-4
                    strong Tablets:
                    span(style='margin-left: 5px;') 1
                  .col-xs-12(style='margin-top: 25px;')
                    .pull-right
                      strong Completed By:
                      span(style='margin-left: 5px;') Patrick Richey
    .col-xs-12.col-lg-10.col-lg-offset-1
      hr
  .row
    .panel-group(role='tablist', aria-multiselectable='true')
      .col-xs-12.col-lg-10.col-lg-offset-1
        .panel.panel-default
          .panel-heading.purpleHead(role='tab', id='storeHeading', data-toggle='collapse', data-target='#storeCollapse')
            .row
              .col-xs-12
                h3.panel-title(style='font-size: 24px;')
                  | Store #: 6529 Alliston Mills Shopping Centre
          .panel-collapse.collapse(role='tabpanel', aria-labelledby='storeHeading', id='storeCollapse')
            .panel-body
              .panel
                .panel-heading.purpleHead
                  .row(role='tab', id='transactionHeading0', data-toggle='collapse', data-target='#transactionCollapse0')
                    .col-xs-4
                      h4.panel-title
                        | 06/27/2016
                    .col-xs-4.text-center
                      h4.panel-title
                        | 1 Device
                    .col-xs-4
                      .pull-right
                        .col-xs-8(style='padding:0;')
                          h4.panel-title
                            | $59.99
                        .col-xs-4(style='padding:0;')
                          if user.privileged >= 3
                            .dropdown(style='margin-top:6px;')
                              a.dropdown-toggle#ddMoreOptions(type='button', data-toggle='dropdown', aria-haspopup='true' aria-expanded='true')
                                i.fa.fa-ellipsis-v.fa-2x(aria-hidden='true')
                              ul.dropdown-menu(aria-labelledby='ddMoreOptions')
                                li
                                  a(href='#')
                                    | Edit Transaction
                                li
                                  a(href='#')
                                    | Remove Transaction
                .panel-collapse.collapse(role='tabpanel', aria-labelledby='transactionHeading0', id='transactionCollapse0')
                  .panel-body
                    .col-xs-12.col-sm-6.col-md-4
                      strong Transaction Type:
                      span(style='margin-left: 5px;') Device
                    .col-xs-12.col-sm-6.col-md-4
                      strong Warranty Type:
                      span(style='margin-left: 5px;') Device Care
                    .col-xs-12.col-sm-6.col-md-4
                      strong Learning Sessions:
                      span(style='margin-left: 5px;') 1
                    .col-xs-12.col-sm-6.col-md-4
                      strong Sale Type:
                      span(style='margin-left: 5px;') New Activation
                    .col-xs-12.col-sm-6.col-md-4
                      strong Attach (Yes/No):
                      span(style='margin-left: 5px;') Yes
                    .col-xs-12.col-sm-6.col-md-4
                      strong AOTMs Sold:
                      span(style='margin-left: 5px;') 1
                    .col-xs-12.col-sm-6.col-md-4
                      strong Device Type:
                      span(style='margin-left: 5px;') Android
                    .col-xs-12.col-sm-6.col-md-4
                      strong Revenue:
                      span(style='margin-left: 5px;') $79.99
                    .col-xs-12.col-sm-6.col-md-4
                      strong Critters Sold:
                      span(style='margin-left: 5px;') 0
                    .col-xs-12.col-sm-6.col-md-4
                      strong SBS Activation (Yes/No):
                      span(style='margin-left: 5px;') Yes
                    .col-xs-12.col-sm-6.col-md-4
                      strong Number of Accessories:
                      span(style='margin-left: 5px;') 1
                    .col-xs-12.col-sm-6.col-md-4
                      strong Credit Card Apps:
                      span(style='margin-left: 5px;') 1
                    .col-xs-6(style='margin-top: 25px;')
                      .pull-left
                        strong Time:
                        span(style='margin-left: 5px;') 6:48 PM
                    .col-xs-6(style='margin-top: 25px;')
                      .pull-right
                        strong Completed By:
                        span(style='margin-left: 5px;') Patrick Richey

block append script
  script(src='/javascripts/observations/transactions.js')