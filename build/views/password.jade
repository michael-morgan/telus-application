extends layout

block append stylesheet


block content
    .row
        .col-lg-12
            h1.page-header #{title}

    .row.m-b-10
        if(error_message.length)
            .col-xs-12
                div.alert.alert-danger(role='alert')
                    .alert-title
                        i.fa.fa-meh-o.fa-2x
                        strong Oops!
                    p !{error_message}

    .row
        .col-xs-12
            form#passwordForm(method='POST', action='/users/password')
                input(type='hidden', name='passwordToken', value='#{id}')
                .form-group.col-xs-12.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
                    label(for='inputPassword')
                        | New Password
                    input.form-control#inputPassword(type='password', name='inputPassword')
                .form-group.col-xs-12.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
                    label(for='inputPasswordVerify')
                        | Verify Password
                    input.form-control#inputPasswordVerify(type='password', name='inputPasswordVerify')
                .col-xs-12.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
                    input.btn.btn-lg.btn-success.btn-block(type='submit', value='Save')

block append script
    script.