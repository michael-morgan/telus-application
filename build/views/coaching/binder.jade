extends ../layout

block append stylesheet
    link(rel='stylesheet', href='/stylesheets/binder.css')

block content
    .row
        .col-xs-12
            h1.page-header Coaching Binder

    //Links for the separate tab pages
    #binderTitle.col-xs-12
        ul.nav.nav-tabs.nav-justified
            li.active(role='presentation')
                a(data-toggle='tab', href='#loe') Letter of Expectation
            li(role='presentation')
                a(data-toggle='tab', href='#logs') Weekly Coaching Logs
            li(role='presentation')
                a(data-toggle='tab', href='#reviews') Monthly Reviews
            li(role='presentation')
                a(data-toggle='tab', href='#surveys') Surveys
            li(role='presentation')
                a(data-toggle='tab', href='#misc') Misc

        //Content for the tab pages
        .tab-content
            #loe.tab-pane.fade.in.active
                h3 Letter of Expectation
                //Content block for the loe.jade file
                include loe
            #logs.tab-pane.fade
                h3 Weekly Coaching Logs
                //Content block for the logs.jade file
                include logs
            #reviews.tab-pane.fade
                //Content block for the reviews.jade file
                h3 Monthly Reviews
                include reviews
            #surveys.tab-pane.fade
                //Content block for the surveys.jade file
                h2 Surveys
                include surveys
            #misc.tab-pane.fade
                //Content block for the misc.jade file
                h3 Misc
                include misc


block append script
    script(src='/javascripts/binder.js')
