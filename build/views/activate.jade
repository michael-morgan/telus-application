extends layout

block content
  .container
    .spacer
  .row
    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading.text-center
          strong  #{title}
        .panel-body
          form.form-horizontal(method='post', action='/activate/#{row.token}', role='form')
            .form-group
              label.col-sm-3.control-label(for='inputPassword') Password
              .col-sm-9
                input#inputPassword.form-control(name='password', placeholder='Password', type='password')
            .form-group
              label.col-sm-3.control-label(for='inputPasswordVerify') Password Verify
              .col-sm-9
                input#inputPasswordVerify.form-control(name='passwordVerify', placeholder='Password Verify', type='password')
            .form-group.last
              .col-sm-offset-5.col-sm-8
                button.btn.btn-success.btn-sm(name='submit', type='submit') Activate