extends layout

block content
  .container
    .spacer
  .row
    .col-md-4.col-md-offset-4
      if errors
        ul
          for error in errors
            li!= error.msg
      .panel.panel-default.formPanel
        .panel-heading.text-center.formTitle
          h2  #{title}
        .panel-body
          form.form-horizontal(method='post', action='/activate/#{row.token}', role='form')
            .form-group
              .col-sm-10.col-sm-offset-1
                .input-group
                  span.input-group-addon.formInput
                    i.fa.fa-lock.fa-fw
                  input.form-control.formInput(name='password', placeholder='Password', type='password')
            .form-group
              .col-sm-10.col-sm-offset-1
                .input-group
                  span.input-group-addon.formInput
                    i.fa.fa-lock.fa-fw
                  input.form-control.formInput(name='passwordVerify', placeholder='Password Verify', type='password')
            .form-group.last
              .col-sm-6.col-sm-offset-3
                button.form-btn.btn.btn-success.btn-lg.btn-block(name='submit', type='submit', value='activate') Activate