doctype html
html
    head
        title #{title}
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        block stylesheet
            link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
            link(rel='stylesheet', href='/bower_components/metisMenu/dist/metisMenu.min.css')
            link(rel='stylesheet', href='/stylesheets/sb-admin-2.css')
            link(rel='stylesheet', href='/bower_components/font-awesome/css/font-awesome.min.css')
            link(rel='stylesheet', href='/stylesheets/hoe/hoe.css')
            link(rel='stylesheet', href='/stylesheets/hoe/extra.css')
            link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css')
            link(rel='stylesheet', href='/stylesheets/style.css')


    if user
        body(hoe-navigation-type='vertical-compact', hoe-nav-placement='left', theme-layout='wide-layout', theme-bg='bg1')
            #hoeapp-wrapper.hoe-hide-lpanel(hoe-device-type='desktop')
                header#hoe-header.hoe-minimized-lpanel(hoe-lpanel-effect='shrink')
                    .hoe-left-header
                        span.hoe-sidebar-toggle
                        a(href='#')
                            i.fa.fa-home
                            span &nbsp Telus Coaching App
                        span.hoe-sidebar-toggle
                            a(href='#')
                    .hoe-right-header(hoe-position-type='relative')
                        span.hoe-sidebar-toggle
                            a(href='#')
                        ul.left-navbar
                        ul.right-navbar
                            li.dropdown.hoe-rheader-submenu.hoe-header-profile
                                a.dropdown-toggle(href='#', data-toggle='dropdown')
                                    span
                                        i.fa.fa-user &nbsp
                                    span
                                        | #{user.first_name} #{user.last_name} &nbsp
                                        i.fa.fa-angle-down
                                ul.dropdown-menu
                                    li
                                        a(href='/users/profile/#{user.t_number}')
                                            i.fa.fa-user
                                            | My Profile
                                    li
                                        a(href='/users/logout')
                                            i.fa.fa-power-off
                                            | Logout
                #hoeapp-container.hoe-minimized-lpanel(hoe-color-type='lpanel-bg2', hoe-lpanel-effect='shrink')
                    aside#hoe-left-panel(hoe-position-type='absolute')
                        ul.nav.panel-list
                            li
                                a(href='/users')
                                    i.fa.fa-tachometer
                                    span.menu-text Dashboard
                                    span.selected
                                ul.hoe-sub-menu.display-none
                                    li
                                        a(href='/users')
                                            span.menu-text Dashboard
                                            span.selected
                            if user.privileged >= 3
                                li.hoe-has-menu
                                    a(href='#')
                                        i.fa.fa-users
                                        span.menu-text Users
                                        span.selected
                                    ul.hoe-sub-menu
                                        li
                                            a(href='/users/register')
                                                span.menu-text Register User
                                                span.selected
                                        li
                                            a(href='/users/remove')
                                                span.menu-text Modify Users
                                                span.selected
                            li.hoe-has-menu
                                a(href='#')
                                    i.fa.fa-eye
                                    span.menu-text Observations
                                    span.selected
                                ul.hoe-sub-menu
                                    li
                                        a(href='/users/observations')
                                            span.menu-text Observations
                                            span.selected
                                    li
                                        a(href='/users/observations/add-observation')
                                            span.menu-text Add Observation
                                            span.selected
                            if user.privileged >= 3
                                li.hoe-has-menu
                                    a(href='#')
                                        i.fa.fa-plus
                                        span.menu-text Behaviours
                                        span.selected
                                    ul.hoe-sub-menu
                                        li
                                            a(href='/users/behaviours')
                                                span.menu-text Behaviours
                                                span.selected
                                        li
                                            a(href='/users/behaviours/add-behaviour')
                                                span.menu-text Add Behaviours
                                                span.selected
                            li
                                a(href='/users/binder')
                                    i.fa.fa-folder-open
                                    span.menu-text Coaching Binder
                                    span.selected
                                ul.hoe-sub-menu.display-none
                                    li
                                        a(href='/users/binder')
                                            span.menu-text
                                            span.selected
                            if user.privileged >= 2
                                li
                                    a(href='/users/settings')
                                        i.fa.fa-gear
                                        span.menu-text Settings
                                        span.selected
                    section#main-content
                        block content
    else
        body
            #page-content
                block content

        block script
            script(src='/bower_components/jquery/dist/jquery.min.js')
            script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
            script(src='/bower_components/metisMenu/dist/metisMenu.min.js')
            script(src='/javascripts/sb-admin-2.js')
            script(src='/javascripts/hoe/hoe.js')
            script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js')