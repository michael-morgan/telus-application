extends layout

block content
  .container
    .spacer
  .row
    .col-md-6.col-md-offset-3
      if errors
        ul
          for error in errors
            li!= error.msg
      .panel.panel-default(id='registerPanel')
        .panel-heading.text-center(id='loginTitle')
          |  Register
        .panel-body
          form.form-horizontal(method='post', action='/users/register', role='form')
            .form-group
              //label.col-sm-3.control-label(for='inputFirst') First Name
              .col-sm-10.col-sm-offset-1
                input#inputFirst.form-control.loginInput(name='firstName', placeholder='First Name', required type='text' value='#{first}')
            .form-group
              //label.col-sm-3.control-label(for='inputLast') Last Name
              .col-sm-10.col-sm-offset-1
                input#inputLast.form-control.loginInput(name='lastName', placeholder='Last Name', required type='text' value='#{last}')
            .form-group
              //label.col-sm-3.control-label(for='inputUsername') Username
              .col-sm-10.col-sm-offset-1
                input#inputUsername.form-control.loginInput(name='username', maxlength='7' placeholder='t######', required  type='text' value='#{username}' pattern="^[t]{1}[0-9]{6}")
            .form-group
              //label.col-sm-3.control-label(for='inputEmail') Email
              .col-sm-10.col-sm-offset-1
                input#inputEmail.form-control.loginInput(name='email', placeholder='Email', required  type='email' value='#{email}' )
            .form-group.last
              .col-sm-6.col-sm-offset-3.col-xs-6.col-xs-offset-3
                button.btn.btn-success.btn-lg.btn-block(name='submit', type='submit', value='register' id='btnRegister') Submit