extends layout

block content
  .container
    .spacer
  .row
    .col-md-4.col-md-offset-4(style='paddingTop:50px')
      .panel.panel-default
        .panel-heading.text-center
          strong  Register
        .panel-body
          != messages()
          form.form-horizontal(method='post', action='/users/register', role='form')
            .form-group
              label.col-sm-3.control-label(for='inputFirst') First Name
              .col-sm-9
                input#inputFirst.form-control(name='firstName', placeholder='First Name', required type='text' value='#{first}')
            .form-group
              label.col-sm-3.control-label(for='inputLast') Last Name
              .col-sm-9
                input#inputLast.form-control(name='lastName', placeholder='Last Name', required type='text' value='#{last}')
            .form-group
              label.col-sm-3.control-label(for='inputUsername') Username
              .col-sm-9
                input#inputUsername.form-control(name='username', maxlength='7' placeholder='t######', required  type='text' value='#{username}')
            .form-group
              label.col-sm-3.control-label(for='inputEmail') Email
              .col-sm-9
                input#inputEmail.form-control(name='email', placeholder='Email', required  type='email' value='#{email}')
            .form-group.last
              .col-sm-offset-5.col-sm-8
                button.btn.btn-success.btn-sm(name='submit', type='submit', value='register') Register
        .panel-footer
          | Already Registered?
          a(href='/users/login')  Login here