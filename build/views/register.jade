extends layout

block content
  .container
    .spacer
  .row
    .col-md-4.col-md-offset-4(style='paddingTop:50px')
      .panel.panel-default
        .panel-heading.text-center
          strong  Register
        .panel-body
          form.form-horizontal(method='post', action='/users/register', role='form')
            .form-group
              label.col-sm-3.control-label(for='inputName') Name
              .col-sm-9
                input#inputName.form-control(name='name', placeholder='Name', type='text')
            .form-group
              label.col-sm-3.control-label(for='inputUsername') Username
              .col-sm-9
                input#inputUsername.form-control(name='username', placeholder='Username', type='text')
            .form-group
              label.col-sm-3.control-label(for='inputEmail') Email
              .col-sm-9
                input#inputEmail.form-control(name='email', placeholder='Email',  type='email')
            .form-group
              label.col-sm-3.control-label(for='inputPassword') Password
              .col-sm-9
                input#inputPassword.form-control(name='password', placeholder='Password', type='password')
            .form-group
              label.col-sm-3.control-label(for='inputConfirmPassword') Password
              .col-sm-9
                input#inputConfirmPassword.form-control(name='passwordVerify', placeholder='Confirm Password', type='password')
            .form-group.last
              .col-sm-offset-5.col-sm-8
                button.btn.btn-success.btn-sm(name='submit', type='submit', value='register') Register
        .panel-footer
          | Already Registered?
          a(href='/users/login')  Login here