extends layout

block content
  #login-wrapper
    .container
      .spacer
      .row
        .col-md-6.col-md-offset-3
          .panel.panel-default(id='loginPanel')
            .panel-heading.text-center(class='formTitle')
              | Login
            .panel-body
              form.form-horizontal(method='post', action='/', role='form')
                .col-md-10.col-md-offset-1(id='usernameInput')
                  .input-group
                    span.input-group-addon.formInput
                      i.fa.fa-user.fa-fw
                    input.form-control.formInput(name='username', placeholder='Username', type='text' pattern='^[t]{1}[0-9]{6}')
                .col-md-10.col-md-offset-1(id='passwordInput')
                  .input-group
                    span.input-group-addon.formInput
                      i.fa.fa-key.fa-fw
                    input.form-control.formInput(name='password', placeholder='Password', type='password')
                .col-md-10.col-md-offset-1
                  .danger
                    if errors
                      ul
                        for error in errors
                          li
                            label.alert.alert-danger.text-center(name='lblWarning' type='text' id='lblWarning')
                              | #{error}
                .col-sm-6.col-sm-offset-3
                  button.btn.btn-success.btn-lg.btn-block(name='submit', type='submit' id='btnLogin') Sign in