extends layout

block content

  .container
      .spacer
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading.text-center
            strong  Login
          .panel-body
            form.form-horizontal(role='form')
              .form-group
                label.col-sm-3.control-label(for='inputEmail') Email
                .col-sm-9
                  input#inputEmail.form-control(placeholder='Email', type='email')
              .form-group
                label.col-sm-3.control-label(for='inputPassword') Password
                .col-sm-9
                  input#inputPassword.form-control(placeholder='Password', type='password')
              .form-group.last
                .col-sm-offset-5.col-sm-8
                  button.btn.btn-success.btn-sm(type='submit') Sign in
          .panel-footer
            | Not Registered?
            a(href='/users/register')  Register here


