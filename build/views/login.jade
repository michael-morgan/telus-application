extends layout

block content
  .container
    .spacer
    .row
      .col-md-4.col-md-offset-4
        if errors
          ul
            for error in errors
              li!= error.msg
        .panel.panel-default
          .panel-heading.text-center
            strong  Login
          .panel-body
            form.form-horizontal(method='post', action='/', role='form')
              .input-group
                span.input-group-addon
                  i.fa.fa-user.fa-fw
                input.form-control(name='username', placeholder='Username', type='text')
              .input-group
                span.input-group-addon
                  i.fa.fa-key.fa-fw
                input.form-control(name='password', placeholder='Password', type='password')
              .checkbox
                label
                  input(name='remember', type='checkbox', value='Remember Me')
                  | Remember Me
              button.btn.btn-success.btn-lg.btn-block(name='submit', type='submit') Sign in