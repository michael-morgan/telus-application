extends layout

block append stylesheet
    link(rel='stylesheet', href='/stylesheets/timeline.css')
    link(rel='stylesheet', href='/bower_components/morris.js/morris.css')

block content
    .row
        .col-lg-12
            h1.page-header #{title}
    .row.m-b-10
        if(success_message.length)
            .col-xs-12
                div.alert.alert-success(role='alert')
                    .alert-title
                        i.fa.fa-check.fa-2x
                        strong Great!
                    p !{success_message}
    .row.m-b-10
        if(error_message.length)
            .col-xs-12
                div.alert.alert-danger(role='alert')
                    .alert-title
                        i.fa.fa-meh-o.fa-2x
                        strong Oops!
                    p !{error_message}
    .row
        a(href='/users/register')
            .col-lg-3.col-md-6
                .panel.panel-primary.text-center
                    .panel-heading
                        .row
                            | Add User
        a(href='/users/edit')
            .col-lg-3.col-md-6
                .panel.panel-primary.text-center
                    .panel-heading
                        .row
                            | Edit User
        a(href='/users/password-change')
            .col-lg-3.col-md-6
                .panel.panel-primary.text-center
                    .panel-heading
                        .row
                            | Change Password
        a(href='/users/documentation')
            .col-lg-3.col-md-6
                .panel.panel-primary.text-center
                    .panel-heading
                        .row
                            | Documentation